/* 选项卡 */
scroll-view{
    white-space: nowrap;
  }
  scroll-view view{
    display: inline-block;
    padding: 10rpx 20rpx;
    font-size: 16px;
    position: relative;
  }
  .current{
    color: rgb(32, 29, 28);
    font-size: 25px;
  }
  .current text{
    width: 10px;
    height: 2px;
    /* background: orangered; */
    position: absolute;
    bottom: 0px;
    left:50%;
    margin-left: -5px;
  }
  /* 右边 */
.a{
    float: right;
}
.a image{
    width: 25px ;
    margin-right: 60px;
}


